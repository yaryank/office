      </details>
      <details>
        <summary class="font-semibold cursor-pointer">Is this really free?</summary>
        <p class="mt-2 text-gray-600">Yes. Just drop your email and it’s yours.</p>
      </details>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="py-10 bg-gray-50 text-center text-base text-gray-500">
    <div>© 2025 Office Health Guide. All rights reserved.</div>
  </footer>

  <script>
    let clickCount = 0;
    const ctaButton = document.getElementById("cta-btn");
    if (ctaButton) {
      ctaButton.addEventListener("click", () => {
        clickCount++;
        console.log(`CTA clicked ${clickCount} times`);
      });
    }

    function changePreview(tab) {
      const img = document.getElementById("preview-img");
      if (img) {
        img.src = `/preview${tab}.jpg`;
      }
    }
  </script>
</Layout>
